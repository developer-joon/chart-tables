{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sang-chart",
  "version": "0.1.0",
  "identifier": "com.sang-chart.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "sang-chart",
        "center": true,
        "width": 1510,
        "height": 865,
        "resizable": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": true
  }
}
